{
  "build": {
    "appId": "org.pgmanage.pgmanage",
    "asar": true,
    "extraResources": [
      "app/pgmanage"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "menuCategory": "pgManage"
    },
    "linux": {
      "category": "Development",
      "target": [
        "deb",
        "rpm"
      ]
    },
    "rpm": {
      "depends": [
        "postgresql-libs",
        "libXScrnSaver",
        "openssl",
        "GConf2",
        "libnotify",
        "libappindicator",
        "libXtst"
      ]
    },
    "deb": {
      "depends": [
        "libxss1",
        "libpq5",
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ]
    },
    "dmg": {
      "icon": null,
      "contents": [
        {
          "x": 353,
          "y": 372,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 97,
          "y": 372
        }
      ]
    }
  },
  "devDependencies": {
    "electron": "^9.1.0",
    "electron-builder": "^20.0.0"
  },
  "homepage": "https://github.com/pgManage/pgManage/blob/master/README.md",
  "keywords": [
    "pgManage",
    "Electron",
    "PostgreSQL"
  ],
  "name": "pgManage",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pgManage/pgManage.git"
  },
  "scripts": {
    "start": "electron app",
    "test": "electron app --pgmanage-test",
    "debug": "electron app --debug=5858",
    "build-dir": "build --dir",
    "dist": "build",
    "dist-win": "build --ia32"
  },
  "version": "11.0.1"
}
